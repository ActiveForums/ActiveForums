	@PortalId int,
	@ModuleId int,
	@RankId int
AS
	SELECT * FROM {databaseOwner}{objectQualifier}activeforums_Ranks WHERE PortalId = @PortalId AND ModuleId = @ModuleId AND RankId = @RankId

GO

